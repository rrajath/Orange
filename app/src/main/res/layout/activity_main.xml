<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <include android:id="@+id/app_bar" layout="@layout/app_bar"/>

        <it.neokree.materialtabs.MaterialTabHost
            android:id="@+id/material_tab_host"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:elevation="@dimen/elevation"
            app:textColor="@android:color/white"
            app:primaryColor="@color/primary_color"
            app:accentColor="@android:color/white" />

<!--
        <com.rrajath.orange.SlidingTabLayout
            android:id="@+id/sliding_tabs"
            android:background="@color/primary_color"
            android:elevation="@dimen/elevation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
-->

        <android.support.v4.view.ViewPager
            android:id="@+id/tab_pager"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <fragment
        android:id="@+id/nav_fragment"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.rrajath.orange.NavDrawerFragment"
        app:layout="@layout/nav_drawer_fragment"
        tools:layout="@layout/nav_drawer_fragment"/>

</android.support.v4.widget.DrawerLayout>